#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
int main() {
    int units;
    float bill, totalBill;

    // Input the number of units consumed
    scanf("%d", &units);

    // Calculate bill according to the given slabs
    if (units <= 50) {
        bill = units * 0.50;
    } 
    else if (units <= 150) {
        bill = (50 * 0.50) + ((units - 50) * 0.75);
    } 
    else if (units <= 250) {
        bill = (50 * 0.50) + (100 * 0.75) + ((units - 150) * 1.20);
    } 
    else {
        bill = (50 * 0.50) + (100 * 0.75) + (100 * 1.20) + ((units - 250) * 1.50);
    }

    // Add 20% surcharge
    totalBill = bill + (bill * 0.20);

    // Print final bill amount with 2 decimal places
    printf("%.2f\n", totalBill);

    return 0;
}
