#include <stdio.h>

int main() {
    float basic, hra, da, gross;

    // Input basic salary
    scanf("%f", &basic);

    // Determine HRA and DA based on conditions
    if (basic <= 10000) {
        hra = 0.20 * basic;
        da  = 0.30 * basic;
    } 
    else if (basic <= 20000) {
        hra = 0.25 * basic;
        da  = 0.40 * basic;
    } 
    else {
        hra = 0.30 * basic;
        da  = 0.50 * basic;
    }

    // Calculate gross salary
    gross = basic + hra + da;

    // Output gross salary with 2 decimal places
    printf("%.2f\n", gross);

    return 0;
}
