#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int N;

    // Input number of rows
    scanf("%d", &N);

    // Outer loop for rows
    for (int i = 1; i <= N; i++) {
        // Print leading spaces
        for (int s = 1; s <= N - i; s++) {
            printf("  ");  // two spaces for alignment
        }

        // Print stars with a space between them
        for (int j = 1; j <= (2 * i - 1); j++) {
            printf("* ");
        }

        // Move to the next line
        printf("\n");
    }

    return 0;
}
