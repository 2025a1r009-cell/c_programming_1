#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>


int main() {
    int N, M;

    // Input number of rows and columns
    scanf("%d %d", &N, &M);

    // Loop through each row
    for (int i = 1; i <= N; i++) {
        // Loop through each column
        for (int j = 1; j <= M; j++) {
            // Print stars on the border, spaces inside
            if (i == 1 || i == N || j == 1 || j == M)
                printf("* ");
            else
                printf("  "); // two spaces for alignment
        }
        printf("\n"); // move to next line after each row
    }

    return 0;
}
